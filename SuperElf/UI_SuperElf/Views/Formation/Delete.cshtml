@using Microsoft.AspNetCore.Http
@model UI_SuperElf.Models.FormationViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete formation</h1>

<h3>Are you sure you want to delete this formation?</h3>
@if ((Context.Session.GetString("_SessionIsAdmin") == "True"))
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2" hidden>
                @Html.DisplayNameFor(model => model.formationId)
            </dt>
            <dd class="col-sm-10" hidden>
                @Html.DisplayFor(model => model.formationId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.formationName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.formationName)
            </dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.formationId">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-success " asp-action="Index">Don't delete</a>
        </form>
    </div>
}
else
{
    <p>
        You are not signed in or you have no permissions to be on this page.
    </p>
}