@using Microsoft.AspNetCore.Http
@model UI_SuperElf.Models.CompetitionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit competition</h1>
<h4>@Model.competitionName</h4>

<hr />
@if ((Context.Session.GetString("_SessionIsAdmin") == "True"))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="competitionId" class="control-label" hidden></label>
                    <input asp-for="competitionId" class="form-control" hidden />
                    <span asp-validation-for="competitionId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="competitionName" class="control-label"></label>
                    <input asp-for="competitionName" class="form-control" />
                    <span asp-validation-for="competitionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a class="btn btn-danger" asp-action="Details" asp-route-id="@Model.competitionId">Back to competition</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <p>
        You are not signed in or you have no permissions to be on this page.
    </p>
}