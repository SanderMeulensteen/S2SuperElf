@using Microsoft.AspNetCore.Http
@model UI_SuperElf.Models.UserEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Update </h1>
<h4>@Model.firstName @Model.lastName</h4>
<hr />
@if ((Context.Session.GetString("_SessionIsAdmin") == "True"))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditPermissions">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="userId" class="control-label" hidden></label>
                    <input asp-for="userId" class="form-control" hidden />
                    <span asp-validation-for="userId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="emailaddress" class="control-label" hidden></label>
                    <input type="email" asp-for="emailaddress" class="form-control" hidden />
                    <span asp-validation-for="emailaddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="userName" class="control-label" hidden></label>
                    <input asp-for="userName" class="form-control" hidden />
                    <span asp-validation-for="userName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="firstName" class="control-label" hidden></label>
                    <input asp-for="firstName" class="form-control" hidden />
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lastName" class="control-label" hidden></label>
                    <input asp-for="lastName" class="form-control" hidden />
                    <span asp-validation-for="lastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label" hidden></label>
                    <input type="password" asp-for="password" value="-" class="form-control" hidden />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="confirmPassword" class="control-label" hidden></label>
                    <input type="password" asp-for="confirmPassword" value="-" class="form-control" hidden />
                    <span asp-validation-for="confirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isAdmin" /> @Html.DisplayNameFor(model => model.isAdmin)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isModerator" /> @Html.DisplayNameFor(model => model.isModerator)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-success" />
                    <a class="btn btn-danger" asp-action="Details" asp-route-id="@Model.userId">Back to user</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <p>
        You are not signed in or you have no permissions to be on this page.
    </p>
}