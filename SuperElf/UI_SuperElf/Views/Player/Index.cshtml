            });
            $('#midfielder').click(function () {
                dt.column(1).search('Midfielder').draw();
            });
            $('#forward').click(function () {
                dt.column(1).search('Forward').draw();
            });
            $('#ajax').click(function () {
                dt.column(2).search('ajax').draw();
            });
            $('#az').click(function () {
