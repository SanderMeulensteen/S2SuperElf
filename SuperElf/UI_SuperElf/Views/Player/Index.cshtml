    <br />
    <br />
    <table id="player_table" class="table">
        <thead class="table-borderless table-dark" style="background-color: rgb(0,142,68)">
            <tr>
                <th>
                    Player name
                </th>
                <th>
                    Position
                </th>
                <th>
                    Club
                </th>
                <th style="width: 20%">
                    <a class="btn-sm btn-danger" asp-action="Create">Add player</a>
                </th>
            </tr>
        </thead>
        <tbody class="table table-bordered">
            @foreach (PlayerViewModel player in Model.Players)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => player.playerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => player.position)
                    </td>
                    <td>
                        @foreach (Club club in Model.Clubs)
                        {
                            if (player.club == club.clubId)
                            {
                                @Html.DisplayFor(modelItem => club.clubName)
                                break;
                            }
                        }
                    </td>
                    <td>
                        <div>
                            <a class="btn-sm" style="background-color: rgb(0, 142, 68); color: white" asp-action="Details" asp-route-id="@player.playerId">Details</a> | 
                            <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@player.playerId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>