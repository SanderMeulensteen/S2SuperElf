@using SharedFiles
@using Logic_SuperElf
@model UI_SuperElf.Models.PlayerViewModel


@{
    ViewData["Title"] = "Add player";
}

<h1>Add player</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="playerName" class="control-label"></label>
                <input asp-for="playerName" class="form-control" />
                <span asp-validation-for="playerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="position" class="control-label"></label>
                <select asp-for="position" class="form-control" asp-items="@Html.GetEnumSelectList<SharedFiles.Position>()"> <option>Select position</option> </select>
                <span asp-validation-for="position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="club" class="control-label"></label>
                <select asp-for="club" class="form-control">
                    <option>Select club</option>
                    @foreach (string clubName in ViewBag.clubNames)
                    {
                        <option value="clubName"> @clubName </option>
                    }
                </select>
                <span asp-validation-for="club" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Players</a>
</div>

