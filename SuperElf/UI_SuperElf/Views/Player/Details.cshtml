@using Logic_SuperElf
@model UI_SuperElf.Models.PlayerCreateViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Playerinfo</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.playerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.playerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.position)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.club)
        </dt>
        <dd class = "col-sm-10">
            @foreach (Club club in Model.allClubs)
            {
                if (Model.club == club.clubId)
                {
                    @Html.DisplayFor(modelItem => club.clubName)
                    break;
                }
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit player", "Edit", new { id = Model.playerId }) |
    <a asp-action="Index">Back to Players</a>
</div>
