@using Logic_SuperElf
@model UI_SuperElf.Models.ClubCreateViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete club</h1>

<h3>Are you sure you want to delete this club?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.clubId)
        </dt>
        <dd class = "col-sm-10" hidden>
            @Html.DisplayFor(model => model.clubId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.clubName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.clubName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.competitionId)
        </dt>
        <dd class="col-sm-10">
            @foreach (Competition competition in Model.allCompetitions)
            {
                if (Model.competitionId == competition.competitionId)
                {
                    @Html.DisplayFor(modelItem => competition.competitionName)
                    break;
                }
            }
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-id="@Model.clubId">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-success " asp-action="Index">Don't delete</a>
    </form>
</div>
